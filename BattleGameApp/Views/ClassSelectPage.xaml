<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleGameApp.Views.ClassSelectPage"
             BackgroundColor="Black">
    <VerticalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center" Margin="20">

        <Label Text="Wybierz klasę postaci" TextColor="White" FontSize="24" HorizontalOptions="Center"/>

            <Grid RowDefinitions="Auto" ColumnDefinitions="50,*,50" HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="◀" TextColor="White" BackgroundColor="#555" Clicked="OnPreviousClassClicked"/>
                <Image x:Name="ClassImage" Grid.Column="1" HeightRequest="200" WidthRequest="200" Aspect="AspectFit"/>
                <Button Text="▶" TextColor="White" BackgroundColor="#555" Grid.Column="2" Clicked="OnNextClassClicked"/>
            </Grid>

            <Label x:Name="ClassNameLabel"
                    TextColor="White"
                    FontSize="22"
                    HorizontalOptions="Center"/>

        <Label x:Name="ClassDescriptionLabel"
               TextColor="LightGray"
               FontSize="16"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Margin="0,5,0,0"/>

        <VerticalStackLayout Spacing="4"
                             Margin="0,5,0,0">

            <Label x:Name="ClassHealthLabel"
                   TextColor="White"/>

            <Label x:Name="ClassStrengthLabel"
                   TextColor="White"/>
        </VerticalStackLayout>
        <Button Text="Rozpocznij walkę" BackgroundColor="#4caf50" TextColor="White"
                Clicked="OnStartBattleClicked" />
    </VerticalStackLayout>
</ContentPage>
